{
  "name": "@bubibubi/ui-components",
  "private": false,
  "version": "2.0.0",
  "main": "dist/ui-components.umd.js",
  "module": "./dist/ui-components.js",
  "exports": {
    ".": {
      "import": "./dist/ui-components.js",
      "require": "./dist/ui-components.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "include": [
    "dist/**/*"
  ],
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "types": "npx -p typescript tsc dist/*.js --declaration --allowJs --emitDeclarationOnly --outDir dist",
    "release": "npm version patch && npm publish",
    "preview": "vite preview"
  },
  "dependencies": {
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.10",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "sass": "^1.70.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
